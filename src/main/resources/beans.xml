<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    Przekształć poprzednią implementację tak aby nie używać adnotacji @Component tylko skorzystać z konfiguracji plikami .xml.-->
    <bean id="first" class="pl.pjatk.artdem.MyFirstComponent"></bean>

    <bean id="second" class="pl.pjatk.artdem.MySecondComponent">
<!--    Spring wymaga istnienia kontstruktorów domyślnych!-->
        <constructor-arg index="0" ref="first"/>
    </bean>

    <bean id="third" class="pl.pjatk.artdem.MyThirdComponent">
        <constructor-arg index="0" ref="first"/>
        <constructor-arg index="1" ref="second"/>
    </bean>

</beans>